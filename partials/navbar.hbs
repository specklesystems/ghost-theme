{{!-- Prevents flow under navbar --}}
<div class="mt-0 w-full h-20"></div>

{{!-- Actual navbar --}}
<div x-data="{ mobileMenuOpen: false, usecasesMenu: false, developersMenu: false, learnMenu: false }"
