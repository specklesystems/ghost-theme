<div class="relative rounded-xl py-10 hover:rounded-2xl shadow hover:shadow-2xl transition overflow-hidden flex col-span-2 md:col-span-2 bg-white dark:bg-gray-900">
  <a href="{{url}}" class="w-full self-center">

    <div class="relative px-8">
      <div class="text-3xl font-semibold text-gray-800 dark:text-gray-200">
        {{title}}
      </div>
      <blockquote class="mt-8">
        <div class="relative text-lg font-medium text-white md:flex-grow">
          <p class="relative text-blue-500">
            {{excerpt}}
          </p>
        </div>

        <footer class="mt-4">
          <p class="text-base font-semibold text-blue-200 dark:text-blue-600">
            Read More
          </p>
        </footer>
      </blockquote>
    </div>
  </a>
</div>